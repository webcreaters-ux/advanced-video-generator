    "# @title Quick Generate\n",
    "# Generate a video quickly without the UI\n",
    "\n",
    "script = \"\"\"Welcome to our amazing video!\n",
    "\n",
    "This video was generated entirely with AI.\n",
    "\n",
    "The future of content creation is here.\n",
    "\n",
    "Generate your own videos with this tool!\"\"\"\n",
    "\n",
    "generator = ColabVideoGenerator()\n",
    "video_path = generator.generate_from_script(script, \"quick_demo.mp4\")\n",
    "\n",
    "if video_path:\n",
    "    print(f\"‚úÖ Video generated: {video_path}\")\n",
    "    \n",
    "    # Show preview\n",
    "    from IPython.display import HTML\n",
    "    import base64\n",
    "    \n",
    "    video_file = open(video_path, 'rb').read()\n",
    "    video_url = f\"data:video/mp4;base64,{base64.b64encode(video_file).decode()}\"\n",
    "    \n",
    "    display(HTML(f\"\"\"\n",
    "    <h3>Video Preview:</h3>\n",
    "    <video width=\"640\" controls>\n",
    "        <source src=\"{video_url}\" type=\"video/mp4\">\n",
    "    </video>\n",
    "    \"\"\"))\n",
    "else:\n",
    "    print(\"‚ùå Video generation failed\")"
   ]
